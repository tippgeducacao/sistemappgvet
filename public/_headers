# Cache static assets for 1 year (immutable for hashed assets)
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Cache uploaded images for 1 year
/lovable-uploads/*
  Cache-Control: public, max-age=31536000, immutable

# Cache WebP images for 1 year
/*.webp
  Cache-Control: public, max-age=31536000, immutable

# Cache PNG images for 1 year
/*.png
  Cache-Control: public, max-age=31536000, immutable

# Cache fonts for 1 year
/*.woff2
  Cache-Control: public, max-age=31536000, immutable

/*.woff
  Cache-Control: public, max-age=31536000, immutable

# Cache HTML for 1 hour (shorter to allow updates)
/*.html
  Cache-Control: public, max-age=3600, must-revalidate

# Root path cache
/
  Cache-Control: public, max-age=3600, must-revalidate